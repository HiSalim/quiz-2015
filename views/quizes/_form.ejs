<ul id="formadd">
	<li>
		<label for="preg" class="rem">Pregunta:</label>
		<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" />
	</li>
	<li>
		<label for="resp" class="rem">Respuesta:</label>
		<input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>" />
	</li>
	<li>
		<label for="tema" class="rem">Índice temático:</label>
		<select name="quiz[tema]">
			<% if( quiz.tema ){ %>
			<option value="<%= quiz.tema %>" ><%= quiz.tema %></option>
			<% } %>

			<option value="Otro">Otro</option>
			<option value="Humanidades">Humanidades</option>
			<option value="Ocio">Ocio</option>
			<option value="Ciencia">Ciencia</option>
			<option value="Tecnología">Tecnología</option>
		</select>

	</li>
	<li class='botones'> <a href="/quizes"><button type="button" id="cancelar">Cancelar</button></a> </li>
	<li class='botones'> <input type="submit" value="Salvar" id="guardar"> </li>
</ul>